@model ApplicationUser

<h3>Authozire the access to the <b>Confidentials</b></h3>

<form method="post">
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" type="text" value="@Model?.Username" class="form-control" required autofocus>
            <div class="invalid-feedback">
                <span asp-validation-for="Username"></span>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Password">Mobile</label>
            <input asp-for="Password" value="@Model?.Password" type="password" class="form-control" required>
            <div class="invalid-feedback">
                <span asp-validation-for="Password"></span>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="invalid-feedback">
            <span>@ViewData[AuthorizeModel.CredentialErrorKey]?.ToString()</span>
        </div>

        <div class="col-md-4 mb-3">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
    </div>
</form>